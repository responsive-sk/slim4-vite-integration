{
    "name": "responsive-sk/slim4-vite-integration",
    "description": "Simple Vite integration for Slim 4 framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Responsive.sk",
            "email": "info@responsive.sk"
        }
    ],
    "keywords": [
        "slim",
        "slim4",
        "vite",
        "assets",
        "frontend"
    ],
    "autoload": {
        "psr-4": {
            "Slim4\\Vite\\": "src/"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "responsive-sk/slim4-root": "^1.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "phpstan": "phpstan analyse src tests"
    },
    "config": {
        "sort-packages": true
    }
}
