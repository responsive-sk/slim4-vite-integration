{
    "name": "responsive-sk/slim4-vite-integration",
    "description": "Vite integration for various template engines in Slim 4 projects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "homepage": "https://github.com/responsive-sk/slim4-vite-integration",
    "keywords": ["slim", "slim4", "vite", "twig", "plates", "blade", "volt", "template", "integration"],
    "require": {
        "php": "^7.4|^8.0",
        "slim/slim": "^4.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/container": "^1.0|^2.0"
    },
    "suggest": {
        "slim/twig-view": "^3.0 - Required for Twig integration",
        "league/plates": "^3.0 - Required for Plates integration",
        "illuminate/view": "^8.0|^9.0|^10.0 - Required for Blade integration",
        "phalcon/cphalcon": "^4.0|^5.0 - Required for Volt integration"
    },
    "autoload": {
        "psr-4": {
            "Slim4\\ViteIntegration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slim4\\ViteIntegration\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "slim/twig-view": "^3.0",
        "league/plates": "^3.0",
        "nyholm/psr7": "^1.5",
        "php-di/php-di": "^6.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs:check": "phpcs --standard=PSR12 src tests",
        "cs:fix": "phpcbf --standard=PSR12 src tests",
        "phpstan": "phpstan analyse -l 8 src tests"
    }
}
